TWILIO_PHONE_NUMBER=

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your_session_secret_here

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key